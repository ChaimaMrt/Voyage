package tn.esprit.pidev.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import tn.esprit.pidev.entities.Entreprise;

@Service
public class EntrepriseService implements IEntrepriseService {

	@Autowired
	EntrepriseRepository entrepriseRespository;
	
	@Override
	public Long ModifierEntreprise(Entreprise entreprise) {
		hotelRepository.save(hotel);
		return hotel.getIdHotel();
	}

	@Override
	public Long AjouterHotel(Entreprise entreprise) {
		hotelRepository.save(hotel);
		return hotel.getIdHotel();
	}

	@Override
	public void SupprimerHotel(Long idEntreprise) {
		hotelRepository.deleteById(idHotel);
		
	}

	@Override
	public Entreprise getEntrepriseById(Long idEntreprise) {
		return hotelRepository.findById(idHotel).orElse(null);
	}
	

}
